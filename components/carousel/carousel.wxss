.carousel{
  width: 100%;
  /* height: 256rpx; */
}

.carousel swiper {
  height: 256rpx;
  /* border: 1px solid red; */
}

.carousel swiper image,.carousel swiper video {
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: blue;
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background: red;   
}