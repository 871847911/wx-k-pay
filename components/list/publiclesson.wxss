/* 热门课程开始 */
.hotLesson{
 padding:0 30rpx 0 32rpx;
 height: 162rpx;
 display: flex;
 justify-content: space-between;
 margin-bottom:65rpx;
 margin-top: 42rpx;
 /* flex-direction: row-reverse; */
}
.txtBox{
  width:410rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.picBox{
  position: relative;
  width:256rpx;
  height: 162rpx;
}
.hotLesson .lessonDes{
  height: auto;
  margin-top:0;
}
.hotLesson:last-child{
  margin-bottom:40rpx;
}
