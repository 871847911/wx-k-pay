.publicLesson{
  padding-bottom:42rpx;
  margin-top: 42rpx;
}
.publicLessonSwiper{
  width:750rpx;
  font-size:0;
  white-space: nowrap;
}
.lessonItem{
  margin-left:20rpx;
  width:256rpx;
  display: inline-block;
}
.publicLesson .lessonItem:first-child{
  margin-left:28rpx;
}
.publicLesson .lessonItem:last-child{
  margin-right:28rpx;
}
.lessonPic{
  position: relative;
  width:100%;
  height:162rpx;
}
.lessonPic1{
  width:256rpx;
  height:162rpx;
}
.lessonPic2{
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  height: 40rpx;
  width: 40rpx;
}
.lessonDes{
  /* height: 85rpx; */
  margin-top:14rpx;
  color:#333;
  font-size:30rpx;
  white-space: normal;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  font-weight: 600;
}
.swiperBox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 150rpx;
}
.bottomDes{
  display: flex;
  justify-content:space-between;
  align-items: center;
  margin-top:20rpx;
}
.bottomDes text{
  font-size:20rpx;
  font-weight: 800;
}
.bottomDes text:nth-child(1){
  color:#B4B4B4;
}
.bottomDes text:nth-child(2){
  color:#FE8060;
}
.bottomDes text:nth-child(3){
  color:#FE8060;
}

