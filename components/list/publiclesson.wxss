}
/* 精品课程 */
.goodLesson{
  padding:0 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.goodLessonItem{
  width:336rpx;
  margin-bottom:60rpx;
  margin-right:18rpx;
}
.bottomBox{
  height: 154rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goodLessonItem:nth-child(2n){
  margin-right:0;
}
.goodPic{
  width:336rpx;
  height:212rpx;
}
.goodPic image{
  width:336rpx;
  height:212rpx;
}

/* 一起拼课的开始 */
.spellingLesson{
  padding:0 30rpx;
}
.spellingItem{
  height:162rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom:65rpx;
}
.lessonDesBox{
  display: flex;
}
.lessonDesBox .pin{
  width:40rpx;
  height:40rpx;
  background:rgba(254,128,96,1);
  border-radius:2px;
  line-height: 40rpx;
  text-align: center;
  color:#fff;
  font-size:24rpx;
}
.lessonDesBox .lessonDes{
  height: auto;
  width:334rpx;
  padding-left:24rpx;
  margin-top:0;
}
.spellingLesson .bottomDes{
  margin-bottom:6rpx;
}
.money text:nth-child(1){
  color:#999;
  font-size:24rpx;
  text-decoration:line-through;
  margin-right:14rpx;
}
