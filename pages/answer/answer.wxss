page {
  background: #f6f7f8;
  display: flex;
  min-height: 100%;
  flex-direction: column;
}

.wenti {
  background: #fff;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  position: relative;
  padding-bottom: 80rpx;
}

.question-input-area {
  padding: 48rpx 32rpx 100rpx 32rpx;
  background: #fff;
  height: auto;
  overflow: hidden;
  flex: 1;
  position: relative;
}

.question-images-area {
  width: 100%;
  position: absolute;
  bottom: 120rpx;
}

.hidTextareaBox {
  padding: 10rpx;
  text-align: right;
}

.hidTextarea {
  width: 40rpx;
  height: 40rpx;
}

textarea {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  word-break: break-all;
}

.contantImg {
  width: 100%;
  margin: 24rpx 0;
}

.contantImg image {
  width: 100%;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
  float: right;
}

.question-images {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  overflow: hidden;
  clear: both;
}

.question-images-tool {
  background: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.addImages {
}

.q-image-wrap {
  width: 218rpx;
  position: relative;
}

.q-image {
  flex: 1;
  height: 140rpx;
  width: 100%;
}

.q-image2 {
  margin: 0 16rpx;
}

.q-image-remover {
  text-align: center;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.q-image-remover image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
  padding: 32rpx 0 24rpx 0;
  word-break: break-all;
}

.time {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.time .timeText {
  display: inline-block;
  padding-left: 48rpx;
}

.contant {
  width: 100%;
  display: block;
  font-size: 28rpx;
  line-height: 48rpx;
  height: 96rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.contants {
  width: 100%;
  display: block;
  font-size: 28rpx;
  line-height: 48rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
  margin-top: 20rpx;
}

.more {
  width: 80rpx;
  position: absolute;
  bottom: 32rpx;
  left: 50%;
  margin-left: -40rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #6CDDC7
}

.mores {
  width: 126rpx;
  position: absolute;
  bottom: 32rpx;
  left: 50%;
  margin-left: -63rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #6CDDC7
}

.mores image {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  right: 0;
  top: 4rpx;
}

.more image {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  right: 0;
  top: 4rpx;
}

.course-bottom {
  height: 100rpx;
  border-top: 1px #eee solid;
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: white;
}

.course-bottom .sold-out {
  width: 742rpx;
  left: 0;
  right: 0;
  height: 98rpx;
  background: rgba(26, 169, 123, 1);
  border-radius: 4rpx;
  position: absolute;
  bottom: 4rpx;
  color: white;
}

.course-bottom .course-bottom-item {
  padding-top: 4rpx;
  width: 20%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
}

.course-bottom .course-bottom-item button::after {
  border: none;
}

.course-bottom .course-bottom-item button {
  margin: 0;
  padding: 0;
  background: none;
  height: auto;
}

.course-bottom .course-bottom-item icon {
  font-size: 40rpx;
}

.course-bottom button {
  width: 77.6%;
  height: 98rpx;
  background: #f5b6a5;
  border-radius: 4rpx;
  font-size: 38rpx;
  font-family: PingFangSC-Medium;
  color: rgba(255, 255, 255, 1);
  margin: 0;
  padding: 0;
}

.bottom-item_img {
  height: 40rpx;
  width: 40rpx;
  margin-top: 26rpx;
}

.bottom-item {
  width: 23.4%;
  margin: 0;
  padding: 0;
  text-align: center;
}

.course-bottom .issub {
  background: rgba(254, 128, 96, 1);
}

.imgTip {
  width: 100%;
  position: absolute;
  bottom:314rpx; 
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(254, 128, 96, 1);
  padding: 40rpx 0 0 0;
  border-top: 1px solid rgba(241,241,241,1);
  text-align: center;
  left: 0;
}
