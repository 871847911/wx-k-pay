/* pages/payColumnDetail/payColumnDetail.wxss */
.detailPic{
  width:100%;
  height:416rpx;
}
.column-des{
  padding:24rpx 30rpx 32rpx 32rpx;
  border-bottom:2rpx solid #F1F1F1;
}
.column-des .column-title{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:#333;
  line-height:42rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.result{
  height: 128rpx;
  width: 128rpx;
}
.columnStatus{
   height: 128rpx;
  width: 128rpx;
}
.column-des .column-info{
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#666666;
  line-height:34rpx;
  margin-top:8rpx;
}
.column-introduction{
  padding-top:32rpx;
}
.introduction-title{
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(72,72,72,1);
  line-height:1;
  padding-left:28rpx;
  border-left:4rpx solid #6CDDC7;
}
.column-intro-detail{
  padding:22rpx 30rpx 44rpx 32rpx;
}
.column-intro-detail text{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}
.column-intro-detail image{
  margin-top:20rpx;
  width:688rpx;
  height:474rpx;
}
.clearPadding{
  padding-top:0;
}
.need{
  padding:24rpx 30rpx 140rpx 32rpx;
}
.need text{
  display: block;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}
.bottomBox{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:106rpx;
  padding-top:12rpx;
  background-color:#fff;
  padding-left:32rpx;
  padding-right:32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-family:PingFangSC-Regular;
}
.bottomBox .share{
  width:40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bottomBox .share image{
  width:36rpx;
  height: 36rpx;
}
.bottomBox .share text{
  font-size:20rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: block;
  margin-top:10rpx;
}
.rightBtn{
  display: flex;
}
.rightBtn view{
  width:290rpx;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.issue{
width:688rpx;
height:98rpx;
background:rgba(245,182,165,1);
border-radius:4rpx;
font-size:36rpx;
color:rgba(255,255,255,1);
text-align: center;
padding-top: 24rpx;
}
.price{
  background-color:#FE8060;
  border-radius:0 4rpx 4rpx 0;
}