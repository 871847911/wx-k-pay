/* pages/payColumnDetail/payColumnDetail.wxss */

.detailPic {
  width: 100%;
  height: 416rpx;
}

.column-des {
  padding: 24rpx 30rpx 32rpx 32rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.column-des .column-title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333;
  line-height: 42rpx;
}

.column-des .column-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #666;
  line-height: 34rpx;
  margin-top: 8rpx;
}

.column-introduction {
  padding-top: 32rpx;
}

.introduction-title {
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
  line-height: 1;
  padding-left: 28rpx;
  border-left: 4rpx solid #6cddc7;
}

.column-intro-detail {
  padding: 22rpx 30rpx 44rpx 32rpx;
}

.column-intro-detail text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.column-intro-detail image {
  margin-top: 20rpx;
  width: 688rpx;
  height: 474rpx;
}

.clearPadding {
  padding-top: 0;
}

.need {
  padding: 24rpx 30rpx 140rpx 32rpx;
}

.need text {
  display: block;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}
.bottomBox{

  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:106rpx;
  background:#fff;
  padding-left:32rpx;
  padding-right:32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-family:PingFangSC-Regular;
}
.issue{
width:688rpx;
height:110rpx;
background:rgba(245,182,165,1);
border-radius:4rpx;
font-size:36rpx;
color:rgba(255,255,255,1);
text-align: center;
padding-top: 24rpx;
}

.hui {
  width: 100%;
  height: 10rpx;
  background: rgba(241, 241, 241, 1);
}

.tab {
  padding-top: 26rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  justify-content: space-around;
  border-bottom: 1rpx solid rgba(241, 241, 241, 1);
}

.tab_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.short {
  margin-top: 20rpx;
  width: 40rpx;
  height: 4rpx;
  background: rgba(108, 221, 199, 1);
  border-radius: 4rpx;
}
.green{
  color: #6CDDC7;
}
.list{
  padding-top: 32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.list_item{
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: row;
}
.item_img{
  margin-right: 32rpx;

  height: 160rpx;
  width: 256rpx;
}
.item_right{
  width: 100%;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.item_msg{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.read_num_img{
  height: 21rpx;
  width: 28rpx;
}
