/* pages/contentAuditDetail/contentAuditDetail.wxss */
.contentDetail{
  padding:32rpx 30rpx 32rpx 32rpx;
}
.topTitle{
  display:flex;
  justify-content: space-between;
}
.topTitle .title{
  width:560rpx;
  font-size:34rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(72,72,72,1);
}
.topTitle .result{
  width:128rpx;
}
.topTitle .result image{
  width:128rpx;
  height: 128rpx;
  display: block;
}
/* 浏览量一栏 */
.numBox{
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(155,155,155,1);
  display: flex;
  justify-content:space-between;
  margin-top:22rpx;
}
/* 播放处 */
/* 发刊词播放 */
.issue-play{
  width:100%;
  height: 120rpx;
  background-color:#F8F8F8;
  margin-top:32rpx;
  margin-bottom:32rpx;
  padding:20rpx;
  box-sizing: border-box;
  display: flex;
}
.playLeft image{
  width:70rpx;
  height:70rpx;
  margin-right:10rpx;
}
.playRight{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.playRight .rightTitle{
  font-size:26rpx;
  font-weight:400;
  color:rgba(72,72,72,1);
}
.playRight .rightInfo{
  font-size:22rpx;
  color:rgba(153,153,153,1);
}
.rightInfo text:nth-child(1){
  margin-right:50rpx;
}
.issueDetail text{
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  margin-top:20rpx;
  display: block;
}
.issueDetail image{
  display: block;
  width:688rpx;
  height:474rpx;
  margin-top:20rpx;
}