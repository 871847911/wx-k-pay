/* pages/courseManage/coureseManage.wxss */


.resPage-title{
  width: 100%;
  line-height: 40rpx;
  padding-left: 32rpx;
  /* padding: 20rpx; */
  display: flex;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #F1F1F1;
  margin-bottom: 48rpx;
}

.course{
  box-sizing: border-box; 
  width: 100%;
  line-height: 40rpx;
  padding-top: 10rpx;
  display: block;
}
 
.course .course-title {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between ;
  padding:0 32rpx;
  height: 60rpx;
  font-size: 44rpx;
  color: #484848;
  line-height: 60rpx;
}
.course .course-title .more{
   height: 40rpx;
  font-size: 28rpx;
  color: #484848;
  font-weight: 500;
}

.course view{
  box-sizing: border-box;
}


.resPage-title .resPage-title-item{
  /* width: 33.33%; */
  
  margin-right: 48rpx;
  padding-bottom: 22rpx!important;
  text-align: center;
  padding: 10rpx 0;
  color: #999999;
  font-size: 30rpx;
}

.resPage-title  .active{
  border-bottom: 4rpx solid #6CDDC7;
  font-size: 36rpx;
  color: #6CDDC7;
  font-weight: 800;
}
.shareList{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-bottom: 20rpx;
}
.share_left{
   height: 162rpx;
  width: 256rpx;
  position: relative;
}
.share_img{
  height: 162rpx;
  width: 256rpx;
  border-radius:8rpx
}
.share_left_icon{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  
}
.share_right{
  margin-left: 20rpx;
  height: 162rpx;
  width: 410rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.share_title{
  height: 85rpx;
  font-size:30rpx;
}
.share_tip{
  color: #6CDDC7;
  font-size:20rpx;
}
.share_content{
  margin-bottom: 4rpx;
  color:rgba(153,153,153,1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size:20rpx;
}
.share_price{
  color:rgba(254,128,96,1);
}