/* pages/giftHistory/giftHistory.wxss */

.gift-list{
  width: 100%;
}
.gift-list .gift{
  display: flex;
  padding: 40rpx 32rpx 40rpx;
  border-bottom: 2rpx solid rgba(241,241,241,1);
}
.gift-list .gift image{
  width: 256rpx;
  height: 162rpx;
  margin-right: 24rpx;
}
.gift-list .gift .gift-info{
  position: relative;
  flex: 1;
}
.gift-list .gift .gift-info text{
  display: block; 
  width: 404rpx;
  color: rgba(17,17,17,1);
  line-height: 42rpx;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}
.gift-list .gift .gift-info .unreceived{
  border-radius: 8rpx;
  border: 2rpx solid #6CDDC7;
  color: #6CDDC7;
  width: 192rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 0;
}
.gift-list .gift .gift-info .received{
  border-radius: 8rpx;
  border: 2rpx solid rgba(208,208,208,1);
  color: rgba(102,102,102,1);
  width: 162rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 0;
}