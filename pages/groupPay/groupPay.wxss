/* pages/payPage/payPage.wxss */

.pay-page {
  padding: 48rpx 0 30rpx 0;
  margin-left: 31rpx;
  margin-right: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.pay-page .order-info {
  width: 404rpx;
  height: 160rpx;
  margin-right: 29rpx;
}

.pay-page .order-info .title {
  height: 85rpx;
  font-size: 30rpx;
  color: rgba(72, 72, 72, 1);
  line-height: 42rpx;
  font-weight: 900;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.pay-page .order-info .price {
  height: 42rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

.pay-page .order-info .price text {
  height: 42rpx;
  font-weight: 900;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: rgba(254, 128, 96, 1);
  line-height: 42rpx;
}

.pay-page .order-pic {
  width: 256rpx;
  height: 160rpx;
}

.pay-page .order-pic image {
  width: 100%;
  height: 100%;
}

.order-style {
  width: 100%;
  padding: 37rpx 0;
  margin-top: 49rpx;
  border-bottom: 2rpx solid #f1f1f1;
  border-top: 2rpx solid #f1f1f1;
  justify-content: space-between;
  display: flex;
}

.order-style .pay {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  color: rgba(72, 72, 72, 1);
  line-height: 44rpx;
  font-weight: 900;
}

.order-style .sty {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

/* bottom */

.course-bottom {
  height: 100rpx;
  border-top: 1px #eee solid;
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.course-bottom .course-bottom-item {
  width: 375rpx;
  height: 100rpx;
  display: flex;
  padding: 28rpx 32rpx;
}

.course-bottom .course-bottom-item view {
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: rgba(72, 72, 72, 1);
  font-weight: 900;
  line-height: 50rpx;
}

.course-bottom .course-bottom-item text {
  color: #fe8060;
  font-weight: 500;
}

.course-bottom button {
  width: 364rpx;
  height: 98rpx;
  display: flex;
  background: #6cddc7;
  border-radius: 4rpx;
  font-size: 38rpx;
  font-family: PingFangSC-Medium;
  text-align: center;
  justify-content: center;
  color: rgba(255, 255, 255, 1);
  margin-right: 0rpx;
}

.course-bottom button[disabled] {
  width: 364rpx;
  height: 98rpx;
  display: flex;
  background: #6cddc7;
  border-radius: 4rpx;
  font-size: 38rpx;
  font-family: PingFangSC-Medium;
  text-align: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.5);
  margin-right: 0rpx;
}

.buy-succeed {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: #000;
}

.oldprice {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-decoration: line-through;
}
