/* pages/groupShare/groupShare.wxss */

page {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: rgba(241, 241, 241, 1);
}

.top {
  flex: 1;
  position: relative;
}

.bottom {
  width: 100%;
  height: 640rpx;
  background: rgba(255, 255, 255, 1);
  /* box-shadow:0px -4px 12px 0px rgba(0,0,0,0.04); */
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  overflow: hidden;
}

.groupCourse {
  padding: 40rpx 40rpx 90rpx 40rpx;
  display: flex;
}

.Course {
  flex: 1;
  position: relative;
}

.courseTitle {
  padding-left: 20rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

.price {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  position: absolute;
  left: 20rpx;
  bottom: 6rpx;
}

.price text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(254, 128, 96, 1);
}

.courseImg {
  width: 256rpx;
  height: 160rpx;
}

.groupNum {
  text-align: center;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.groupNum text {
  font-size: 32rpx;
  font-weight: 400;
  color: #fe8060;
}

.time {
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(72, 72, 72, 1);
}

.botton {
  width: 686rpx;
  height: 98rpx;
  background: #6CDDC7;
  border-radius: 4rpx;
  line-height: 98rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 0 auto;
}

.shareText {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  padding-top: 32rpx;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  height: 224rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.commodity_attr_box .attr_box_text {
  text-align: center;
  padding: 10rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.weixinIcon {
  width: 80rpx;
  height: 80rpx;
}

.weui-btnz {
  position: absolute;
  left: 0;
  width: 100%;
  bottom: 0;
  border-radius: 0 !important;
  background-color: #fff !important;
  border-top: 1rpx solid rgba(214, 214, 210, 1);
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

button::after {
  border: none;
  border-radius: 0 !important;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

.commodity_attr_box button.closePop::after {
  border: none;
}

.commodity_attr_box button.closePop {
  width: 100rpx;
  margin: 0;
  padding: 0;
  background: none;
  height: 100rpx;
}

.commodity_attr_box button.closePop .bottom-item_img {
  width: 100%;
  height: 100%;
}

.icon_box {
  display: flex;
  padding: 24rpx 176rpx;
  justify-content: space-between;
}

.btn_text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  padding: 12rpx 0;
}

.imgBox image {
  width: 686rpx;
  height: 968rpx;
}

.imgBox {
  text-align: center;
  position: absolute;
  z-index: 200;
  left: 32rpx;
  top: 32rpx;
}

.imgBoxbg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #999;
  z-index: 199;
}

.download {
  width: 686rpx;
  height: 98rpx;
  background: #6CDDC7;
  border-radius: 4rpx;
  position: absolute;
  bottom: 80rpx;
  z-index: 200;
  left: 50%;
  margin-left: -343rpx;
  line-height: 98rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

.bottomText {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  bottom: 30rpx;
  z-index: 200;
}

.topImgBox {
  width: 120rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 200rpx 0rpx 0rpx 200rpx;
  position: absolute;
  right: 0;
  top: 72rpx;
}

.topImg {
  width: 58rpx;
  height: 58rpx;
  position: absolute;
  top: 10rpx;
  left: 38rpx;
}

.topBgBox {
  width: 100%;
  height: 240rpx;
  position: absolute;
  text-align: center;
  left: 0;
  top: 50%;
  margin-top: -150rpx;
}

.topBgBox .topBg {
  width: 200rpx;
  height: 200rpx;
}

.topBgBox .topBgBoxText {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.success {
  text-align: center;
  padding-bottom: 68rpx;
}

.success image {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-right: 24rpx;
  margin-top: -7rpx;
}

.success text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}
