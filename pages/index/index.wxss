.index-type{

  height: 176rpx;
  box-sizing: border-box;
  display: flex;
  /* border: 1px solid black; */
  width:100%;white-space: nowrap;
}
.carousel{
  width: 100%;
  padding: 15rpx 30rpx 0rpx 32rpx;
}
.index-type .type-item{
  width: 22.5%;
  text-align: center;
  box-sizing: border-box;
  display:inline-block; 
}

.index-type .type-item image {
  width: 64rpx;
  height: 64rpx;
  display: block;
  margin: 32rpx 43rpx 19rpx  43rpx;
  /* border:1px dashed gray; */
}
.index-type .type-item text{
  width: 96rpx; 
  height: 34rpx;  
  margin: 0 27rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  display: block;
  color:rgba(0,0,0,1);
  font-weight:400; 
  font-family:PingFangSC-Medium;
}

.course{
  width: 100%;
  display: block;
  height: auto;
  border-bottom: 1rpx solid #f8f8f8;
  /* border: 1px solid red; */
}
 
.course .course-title {
  box-sizing: border-box;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: space-between ;
  margin-top: 30rpx;
  margin-left: 32rpx;
  margin-right: 30rpx;
  flex-wrap: wrap;
  height: 60rpx;
}

.course .course-title .course-subtitle{
  height: 60rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  color: #333;
  font-weight: 600;
}

.course .course-title .course-more{
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999;
}
.white{
  height: 38rpx;
  width: 100%;
  background: #fff;
}
.line{
  height: 20rpx;
  width: 100%;
  background: #f8f8f8;
}
.carousel{
  width: 100%;
  /* height: 256rpx; */
}

.carousel swiper {
  height: 256rpx;
  /* border: 1px solid red; */
}

.carousel swiper image,.carousel swiper video {
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: blue;
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background: red;   
}