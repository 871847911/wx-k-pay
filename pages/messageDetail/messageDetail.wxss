  margin-bottom: 29rpx;
}

.message2-page .time {
  height: 40rpx;
  margin-bottom: 48rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(72, 72, 72, 1);
  line-height: 40rpx;
}

.message2-page .content {
  width: 688rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(72, 72, 72, 1);
  line-height: 40rpx;
}

.message2-page .yes {
  float: right;
  font-weight: 900;
  color: #6cddc7;
}

.message2-page .no {
  float: right;
  font-weight: 900;
  color: #f12c20;
}

.bottom-btn {
  width: 742rpx;
  left: 0;
  right: 0;
  height: 98rpx;
  background: #6cddc7;
  border-radius: 4rpx;
  position: absolute;
  bottom: 4rpx;
