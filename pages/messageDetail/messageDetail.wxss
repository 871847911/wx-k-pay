  height: 100%;
}

.message1-page {
  background: rgba(247, 247, 247, 1);
  padding-top: 10rpx;
  width: 100%;
  min-height: 100%;
  padding-bottom: 106rpx;
}

.message1-page .consult {
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 38rpx auto;
  border-radius: 39rpx;
  background: rgba(215, 215, 215, 1);
  display: block;
  text-align: center;
  color: white;
}

.message1-page .inputBox {
  left: 0;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 106rpx;
  padding: 14rpx 28rpx 14rpx 32rpx;
  background: white;
}

.message1-page .message1-page-title {
  background: white;
  margin-bottom: 20rpx;
}

.message1-page .inputBox input {
  width: 575rpx;
  height: 78rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  border: 2rpx solid #f1f1f1;
  text-indent: 8rpx;
  padding: 0 16rpx;
  display: inline-block;
  vertical-align: top;
  margin: 0;
}

.message1-page .inputBox button {
  display: inline-block;
  vertical-align: top;
  width: 75rpx;
  line-height: 78rpx;
  text-align: center;
  color: #6cddc7;
  font-size: 32rpx;
  font-weight: 900;
  padding: 0;
  margin: 0;
  border: 0;
  margin-left: 5rpx;
}

.message1-page .inputBox button::after {
  border: none;
  background-color: none;
}

.message1-page .messageBox {
  margin: 10rxp;
  margin-bottom: 10rpx;
  min-height: 96rpx;
  display: flex;
  padding: 0 32rpx;
  flex-direction: row-reverse;
}

.message1-page image {
  display: block;
  height: 100%;
  width: 100%;
}

.message1-page .messageBox .messageBox-content {
  max-width: 484rpx;
  left: 128rpx;
  padding: 21rpx 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  border-radius: 8rpx;
  margin: 0 10rpx;
  margin-bottom: 50rpx;
}

.message1-page .messageBox .other {
  color: rgba(255, 255, 255, 1);
  background: rgba(254, 128, 96, 1);
}

.message1-page .messageBox .me {
  color: rgba(255, 255, 255, 1);
  background: #fe8060;
}

.message1-page .messageBox .head {
  width: 96rpx;
  height: 96rpx;
  left: 32rpx;
  border-radius: 50%;
}

.message1-page .messageBox .head image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

