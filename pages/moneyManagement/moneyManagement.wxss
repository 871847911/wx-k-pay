/* pages/moneyManagement/moneyManagement.wxss */

.container {
  width: 100%;
  padding-top: 32rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.moneay_all {
  position: relative;
  height: 340rpx;
  width: 100%;
  border-radius: 8px;
  padding-left: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.today_money {
  font-size: 60rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.7);
}

.allImage {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 340rpx;
  z-index: -1;
}

.goright {
  height: 20rpx;
  width: 20rpx;
}

.today_money_text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.other_money {
  margin-top: 42rpx;
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.7);
}

.allMoney {
  margin-left: 160rpx;
}

.finish_pay {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(241, 241, 241, 1);
}

.pay_text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.pay_num {
  margin-top: 10rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}
