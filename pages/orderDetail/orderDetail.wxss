/* pages/orderDetail/orderDetail.wxss */

.order-status {
    height: 66rpx;
    font-size: 48rpx;
    font-family: PingFangSC-Medium;
    color: rgba(72, 72, 72, 1);
    line-height: 66rpx;
    padding: 41rpx 0 51rpx 32rpx;
    font-weight: 900;
}

.pay-page {
    padding: 48rpx 0 30rpx 0;
    margin-left: 31rpx;
    margin-right: 30rpx;
    display: flex;
    flex-wrap: wrap;
}

.pay-page .order-info {
    width: 404rpx;
    height: 160rpx;
    margin-right: 29rpx;
}

.pay-page .order-info .title {
    height: 85rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium;
    color: rgba(72, 72, 72, 1);
    line-height: 42rpx;
    font-weight: 900;
    margin-bottom: 41rpx;
}

.pay-page .order-info .price {
    height: 42rpx;
    font-weight: 900;
    font-size: 30rpx;
    font-family: PingFangSC-Medium;
    color: rgba(254, 128, 96, 1);
    line-height: 42rpx;
}

.pay-page .order-pic {
    width: 256rpx;
    height: 160rpx;
}

.pay-page .order-pic image {
    width: 100%;
    height: 100%;
}

.order-style {
    width: 100%;
    padding-top: 36rpx;
    justify-content: space-between;
    /* border-top: 1rpx solid rgba(241, 241, 241, 1); */
    display: flex;
}

.order-style2 {
    width: 100%;
    justify-content: space-between;
    display: flex;
    padding-bottom: 37rpx;
    margin-top: 18rpx;
    border-bottom: 1rpx solid rgba(241, 241, 241, 1);
}

.order-style .pay,
.order-style2 .pay {
    height: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    color: rgba(72, 72, 72, 1);
    line-height: 44rpx;
    font-weight: 900;
}

.order-style .sty,
.order-style2 .sty {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
}

button {
    margin-top: 100rpx;
    width: 328rpx;
    height: 96rpx;
    border-radius: 8rpx;
    background-color: white;
    color: #6cddc7;
}

.active-btn {
    color: white;
    background-color: #6cddc7;
}