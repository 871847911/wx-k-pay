/* pages/payColumnDetail/payColumnDetail.wxss */
.detailPic{
  width:100%;
  height:416rpx;
}
.column-des{
  padding:24rpx 30rpx 32rpx 32rpx;
  border-bottom:2rpx solid #F1F1F1;
}
.column-des .column-title{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:#333;
  line-height:42rpx;
}
.column-des .column-info{
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#666666;
  line-height:34rpx;
  margin-top:16rpx;
}
.column-introduction{
  padding-top:32rpx;
}
.introduction-title{
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#484848;
  line-height:1;
  padding-left:28rpx;
  border-left:4rpx solid #6CDDC7;
}
.column-intro-detail{
  padding:22rpx 30rpx 44rpx 32rpx;
}
.column-intro-detail text{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}
.column-intro-detail image{
  margin-top:20rpx;
  width:688rpx;
  height:474rpx;
}
.clearPadding{
  padding-top:0;
}
.need{
  padding:24rpx 30rpx 140rpx 32rpx;
}
.need text{
  display: block;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}
.bottomBox{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:106rpx;
  padding-top:12rpx;
  background-color:#fff;
  padding-left:50rpx;
  padding-right:32rpx;
  box-sizing: border-box;
  border-top:2rpx solid #F1F1F1;
  display: flex;
  justify-content: space-between;
  font-family:PingFangSC-Regular;
}
.bottomBox .share{
  margin-right: 25rpx;
  width:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.bottomBox .share image{
  width:36rpx;
  height: 36rpx;
}
.bottomBox .share text{
  font-size:20rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: block;
  margin-top:10rpx;
}
.rightBtn{
  display: flex;
}
.rightBtn view{
  width:290rpx;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.issue{
  background-color:#F5B6A5;
  border-radius:4rpx 0 0 4rpx;
}
.price{
  background-color:#FE8060;
  border-radius:0 4rpx 4rpx 0;
}
.black{
background:  rgba(153, 153, 153, 1);
color: #fff;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  height: 450rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.commodity_attr_box .attr_box_text {
  text-align: center;
  padding: 10rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
..weixinIcon {
  width: 80rpx;
  height: 80rpx;
}

.weui-btnz {
  position: absolute;
  left: 0;
  width: 100%;
  bottom: 0;
  border-radius: 0 !important;
  background-color: #fff !important;
  border-top: 1rpx solid rgba(214, 214, 210, 1);
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

button::after {
  border: none;
  border-radius: 0 !important;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(72, 72, 72, 1);
}

.commodity_attr_box button.closePop::after {
  border: none;
}

.commodity_attr_box button.closePop {
  width: 100rpx;
  margin: 0;
  padding: 0;
  background: none;
  height: 100rpx;
}

.commodity_attr_box button.closePop .bottom-item_img {
  width: 100%;
  height: 100%;
}
.icon_box{
  padding:30rpx 60rpx;
}