.bck{
  width: 750rpx;
  height: 160rpx;
}
.bck image{
  height: 100%;
  width: 100%;
}

.header{
  height: 72rpx;
  padding-left: 32rpx;
  padding-right: 30rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 13rpx;
}

.header .user-header{
  height: 144rpx;
  width: 144rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  margin-top: -72rpx;
}

 .header .user-header image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

.header .user-order{
  height: 64rpx;
  background: rgba(255,255,255,1);
  border-radius: 36rpx;
  border: 2rpx solid #6CDDC7;
  padding-top: 12rpx;
  padding-left: 52rpx;
  padding-right:  52rpx;
  font-size: 28rpx;
  color: #6CDDC7;
  font-weight: 800;
  margin-top: 22rpx;
}

.ordering{
  background:#6CDDC7!important;
  color: white!important;
}

.content{
  width: 100%;
  padding-left: 32rpx;
  padding-right: 30rpx;
  margin-bottom: 36rpx;
}

.content .username{
  height:48rpx;
  font-size:40rpx;
  font-family:PingFangSC-Medium;
  color:rgba(72,72,72,1);
  line-height:56rpx;
  font-weight: 900;
  margin-bottom: 13rpx;
}

.content .user-info text{
  margin-top: 34rpx;
  height: 34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:#999999;
  line-height:34rpx;
  margin-right: 96rpx;
  margin-bottom: 35rpx;
  display: inline-block;
  vertical-align: top;
}
.content .user-intr{
  width: 694rpx;
  /* min-height: 136rpx; */
  font-size:26rpx;
  font-family:PingFangSC-Medium;
  color:rgba(72,72,72,1);
  line-height:42rpx;
  font-weight: 400;
}
.read-more{
  color: #6CDDC7;
  font-size: 36rpx;
  font-weight: 550;
}
.read-more2{
  color:#6CDDC7;
  font-size:36rpx;
  font-weight:500;
}
.ellplice{
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp:3;
}
.course{
  margin-top: 36rpx;
  width: 100%;
  display: block;
  height: auto;
}
 
.course .course-title {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-around;
  margin-left: 32rpx;
  margin-right: 30rpx;
  flex-wrap: wrap;
  height: 60rpx;
}


.course .course-title .course-subtitle{
  height: 60rpx;
  line-height: 60rpx;
  font-size:30rpx;
  color:rgba(153,153,153,1);
}
.course .course-title .change{
  color: #6CDDC7;
  font-size:36rpx;
}
.green{
  margin-left: 12rpx;
  margin-top: 16rpx;
  width:48rpx;
height:4rpx;
background:rgba(108,221,199,1);
border-radius:4rpx;

}
.course .course-title .course-more{
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #484848;
}
.hui{
  width: 100%;
  height: 10rpx;
  background: #f8f8f8;
}

/* pages/payColumnList/payColumnList.wxss */
.pay-column-list{
  padding:0 28rpx 20rpx 32rpx;
  overflow:hidden;
}
.pay-list-item{
  display: flex;
  margin-top:32rpx;
}
.item-left{
  margin-right:32rpx;
}
.item-left image{
  width:256rpx;
  height:162rpx;
  display:block;
  border-radius: 8rpx;
}
.item-right{
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.top-title{
  width:400rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(17,17,17,1);
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.top-des{
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(102,102,102,1);
  margin-top:20rpx;
}
.bottom-des{
  display: flex;
  justify-content: space-between;
  font-family:PingFangSC-Regular;
}
.bottom-des .item-money{
  font-size:28rpx;
  font-weight:400;
  color:rgba(254,128,96,1);
}
.bottom-des .item-num{
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}