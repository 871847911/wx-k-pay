page{
}
.search{
  padding: 32rpx;
}
.search-box{
  height: 80rpx;
  background: rgba(241,241,241,1);
  border-radius: 8rpx;
  display: flex
}
.search-box .iconfont{
  font-family: "iconfont" !important;
  font-size:16px;
  margin: 10rpx 0 0 32rpx;
}
.search-box input{
  height: 80rpx;
  flex: 1;
  padding-left: 30rpx
}


.question-title{
  word-break: break-all;
  display: flex;
  padding: 6rpx 32rpx 10rpx;
  border-bottom: 2rpx solid rgba(241,241,241,1);
}

.question-title .question-title-item{
  width: 218rpx;
  height: 140rpx
}

.question-title .question-title-item image{
  width: 60rpx;
  height: 60rpx;
  margin: 18rpx 78rpx;
}
.question-title .question-title-item text{
  display: block;
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  text-align: center;
}
.question-title .is-active text{
  color: #6cddc7;
}
.question-title .is-active .line{
  height: 6rpx;
  width: 48rpx; 
  margin: 10rpx 0 0 85rpx;
  background: #6cddc7;
}

.add-question{
  position: fixed;
  height: 80rpx;
  width: 100%;
  bottom: 16rpx;
}
.add-question image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;  
  left: 50%;
  margin-left: -40rpx;
}
.my-question{
  position: fixed;
  height: 80rpx;
  width: 100%;
  bottom: 66rpx;
}
.my-question image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;  
  left: 50%;
  margin-left: -40rpx;
}
.my-question text{
  display: block;
  width: 100%;
  text-align: center;
  position: absolute;  
  top: 96rpx;
  color: rgba(72,72,72,1);
  background: #fff;
  padding-bottom: 20rpx;
}

.questions{
  padding: 48rpx 32rpx 96rpx
}
.question-list{
  margin-bottom: 32rpx;
  background:rgba(248,248,248,1);
}
.question-list .quesTitle{
  word-break: break-all;
  line-height: 48rpx;
  font-size: 30rpx;
  color: rgba(72,72,72,1);
  padding: 32rpx;
}
.question-list .quesDet{
  display: flex;
  justify-content: space-between;
  line-height: 32rpx;
  font-size: 24rpx;
  color: rgba(72,72,72,1);
  padding: 0 32rpx 32rpx;
}
.question-list .quesDe .no_ans{
  color: rgba(254,128,96,1);
}
.question-list .quesDe .ans{
  color: rgba(0,180,185,1);
}

.empty-content{
  margin-top: 0
}