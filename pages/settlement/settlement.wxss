/* pages/settlement/settlement.wxss */
.settlement{
  padding:0 30rpx 106rpx 32rpx;
}
.settlement-item{
  padding:48rpx 0;
  border-bottom: 2rpx solid #F1F1F1;
  display: flex;
  justify-content: space-between;
}
.item-left{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item-title{
  width:400rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size:30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.item-price{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(254,128,96,1);
  line-height:40rpx;
}
.item-right image{
  width:256rpx;
  height:160rpx;
  display: block;
}
/* 支付方式 */
.payway{
  padding:38rpx 0;
  border-bottom: 2rpx solid #F1F1F1;
  display: flex;
  justify-content: space-between;
  font-family:PingFangSC-Regular;
  font-weight:400;
  align-items: center;
}
.payway text:nth-child(1){
  font-size:32rpx;
  color:rgba(51,51,51,1);
}
.payway text:nth-child(2){
  font-size:28rpx;
  color:rgba(102,102,102,1);
}
/* 确认支付 */
.bottomPay{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:106rpx;
  background-color:#fff;
  padding-left:32rpx;
  padding-right:30rpx;
  box-sizing: border-box;
  border-top:2rpx solid #F1F1F1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family:PingFangSC-Regular;
}
.payLeft{
  display: flex;
  font-size:30rpx;
  color:#484848;
}
.payLeft .price{
  color:#FE8060;
  font-family:PingFangSC-Medium;
  font-weight:400;
}
.payRight{
  width:338rpx;
  height:80rpx;
  background:rgba(108,221,199,1);
  border-radius:4rpx;
  color:#fff;
  text-align: center;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
}