.shareList {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-bottom: 20rpx;
}

.share_left {
  height: 162rpx;
  width: 256rpx;
  position: relative;
}

.share_img {
  height: 162rpx;
  width: 256rpx;
  border-radius: 8rpx;
}

.share_left_icon {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.share_right {
  margin-left: 20rpx;
  height: 162rpx;
  width: 410rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.share_title {
  font-size: 30rpx;
  width: 400rpx;
  color: rgba(72, 72, 72, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 600;
}

.share_tip {
  color: #6cddc7;
  font-size: 20rpx;
}

.share_content {
  margin-bottom: 4rpx;
  color: rgba(153, 153, 153, 1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 20rpx;
}

.share_price {
  color: rgba(254, 128, 96, 1);
}
