  background: rgba(248, 248, 248, 1);
}

.sv_right {
  margin-left: 46rpx;
}

.right_tab {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.right_tab_item {
  padding-top: 29rpx;
  padding-bottom: 29rpx;
  text-align: center;
  width: 250rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.sort_item {
  width: 750rpx;
  padding-left: 32rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.corust_type {
  padding-left: 30rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
