/* pages/sort/sort.wxss */



.tab_name {
  max-width: 125rpx;
  text-align: right;
  overflow: hidden; /*超出部分隐藏*/
  white-space: nowrap; /*不换行*/
  text-overflow: ellipsis; /*超出部分文字以...显示*/
}

.tab_icon {
  margin-left: 10rpx;
  height: 28rpx;
  width: 28rpx;
}

.list {
  padding-left: 32rpx;
  padding-top: 32rpx;
  padding-right: 32rpx;
}

.list_item {
  display: flex;
  flex-direction: row;
  margin-bottom: 68rpx;
}

.head {
  border-radius: 4rpx;
  height: 162rpx;
  width: 256rpx;
}

.text {
  width: 410rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.text_title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.num_price {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.num {
  color: rgba(153, 153, 153, 1);
}

.price {
  color: rgba(254, 128, 96, 1);
}

.popupBackground {
  position: absolute;
  width: 100%;
