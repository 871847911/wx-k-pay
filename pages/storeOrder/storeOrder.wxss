
.resPage-title{
  width: 100%;

  line-height: 40rpx;
  padding-left: 32rpx;
  /* padding: 20rpx; */
  display: flex;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #F1F1F1;
  
}

.course{
  box-sizing: border-box; 
  width: 100%;
  line-height: 40rpx;
  padding-top: 10rpx;
  display: block;
}
 
.course .course-title {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between ;
  padding:0 32rpx;
  height: 60rpx;
  font-size: 44rpx;
  color: #484848;
  line-height: 60rpx;
}
.course .course-title .more{
   height: 40rpx;
  font-size: 28rpx;
  color: #484848;
  font-weight: 500;
}

.course view{
  box-sizing: border-box;
}


.resPage-title .resPage-title-item{
  /* width: 33.33%; */
  
  margin-right: 48rpx;
 
  text-align: center;
 
  color: #999999;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.resPage-title  .active{
 
  font-size: 36rpx;
  color: #6CDDC7;
  font-weight: 400;
}
.line{
  margin-top: 26rpx;
  display: flex;
  align-items: center;
  background: #6CDDC7;
  width: 40rpx;
  height: 4rpx;
}
.order{
  margin:44rpx 30rpx 0rpx 30rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  font-size: 30rpx;
}
.orderStastus{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.orderTime{
  color: #666666;
}
.orderPayStatus{
  color: #999;
}
.orderMsg{
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  
}
.orderImg_img{
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;

}
.orderTitleAndName{
  margin-left: 32rpx;
  width: 352rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.orderName{
  font-size:28rpx;
font-family:PingFangSC-Regular;
